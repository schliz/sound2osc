{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "docs/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "artifacts/sound2osc-linux",
            "label": "sound2osc-linux (GUI Application)",
            "name": "sound2osc-linux"
          },
          {
            "path": "artifacts/sound2osc-headless-linux",
            "label": "sound2osc-headless-linux (CLI Application)",
            "name": "sound2osc-headless-linux"
          },
          {
            "path": "artifacts/sound2osc-windows.exe",
            "label": "sound2osc-windows.exe (GUI Application)",
            "name": "sound2osc-windows.exe"
          },
          {
            "path": "artifacts/sound2osc-headless-windows.exe",
            "label": "sound2osc-headless-windows.exe (CLI Application)",
            "name": "sound2osc-headless-windows.exe"
          },
          {
            "path": "artifacts/sound2osc-macos.app.zip",
            "label": "sound2osc-macos.app.zip (GUI Application Bundle)",
            "name": "sound2osc-macos.app.zip"
          },
          {
            "path": "artifacts/sound2osc-headless-macos",
            "label": "sound2osc-headless-macos (CLI Application)",
            "name": "sound2osc-headless-macos"
          },
          {
            "path": "docs/CHANGELOG.md",
            "label": "CHANGELOG.md",
            "name": "CHANGELOG.md"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["docs/CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
